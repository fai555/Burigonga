    <script type="text/javascript">



        /******************TO DRAW GRAPH FOR TEMPERATURE STARTS************************/


        var xData = [];
        var yData = [];
        var i = 0;
    
        {% for water in water_data %}
            yData[i] = {{ water.temperature }};
            xData[i] = new Date("{{ water.dateTime.isoformat }}");
            //var bal = new Date("{{ water.dateTime.isoformat }}");
            i = i + 1;
                    
        
        {% endfor %}
        


        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        //window.alert(xData[2]);


        function resizeCharts () {
            drawChart();
        }
        if (window.addEventListener) {
            window.addEventListener('resize', resizeCharts);
        }
        else if (window.attachEvent) {
            window.attachEvent('onresize', resizeCharts);
        }
        else {
            window.onresize = resizeCharts;
        }





              function drawChart() {
                /*var data = google.visualization.arrayToDataTable([
                  ['Year', 'Sales', 'Expenses'],
                  ['2004',  1000,      400],
                  ['2005',  1170,      460],
                  ['2006',  660,       1120],
                  ['2007',  1030,      540]
                ]);*/

                var data = new google.visualization.DataTable();
                data.addColumn('string', 'Task');
                data.addColumn('number', 'Hours per Day');


                for(var j=0;j<yData.length;j++){
                    data.addRow([xData[j].toLocaleDateString(),parseInt(yData[j])]);
                }
                /*data.addRows([
                  ['Work', parseInt(dataHolder[2])],
                  ['Eat', 2],
                  ['Commute', 2],
                  ['Watch TV', 2],
                  ['Sleep', {v:7, f:'7.000'}]
                ]);*/

                var options = {
                  title: 'Company Performance',
                  curveType: 'function',
                  legend: { position: 'bottom' },
                  pointShape:  'circle',
                  pointSize: 7
                };

                var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

                chart.draw(data, options);
      }        


      /******************TO DRAW GRAPH FOR TEMPERATURE STARTS************************/
